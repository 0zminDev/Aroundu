{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // Konfiguracja YARP
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "events-route": {
        "ClusterId": "events-cluster",
        "Match": {
          "Path": "/api/events/{**catch-all}"
        }
      },
      "events-swagger-route": {
        "ClusterId": "events-cluster",
        "Match": {
          "Path": "/swagger-events/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/swagger-events" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://aroundu-auth-service-api"
          }
        }
      },
      "events-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://aroundu-events-service-api"
          }
        }
      }
    }
  }
}
